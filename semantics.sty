% Denotation
\newcommand{\dn}{\@ifstar\@dn\@@dn}
\newcommand{\@@dn}[2][]{\ensuremath{ \llbracket \textrm{#2} \rrbracket^{#1} }}
\newcommand{\@dn}[2][]{\ensuremath{ \left\llbracket \textrm{#2} \right\rrbracket^{#1} }}
\newcommand{\dndef}[3][]{\ensuremath{ \dn[#1]{\textit{#2}} = #3 }}

\newcommand{\fnc}[1]{\ensuremath{ \mathsf{#1} }}
\let\fn=\fnc

% Lambda Calculus
\newcommand{\tp}[1]{\ensuremath{ {\langle #1 \rangle} }}
\newcommand{\lam}{\@ifstar\@lam\@@lam}
\newcommand{\@@lam}[2]{\ensuremath{ \lambda #1 \left[ #2 \right] }}
\newcommand{\@lam}[2]{\ensuremath{ \lambda #1 [ #2 ] }}

% Quantification
\newcommand{\Op}{\@ifstar\@Op\@@Op}
\newcommand{\@@Op}[3]{\ensuremath{ #1 #2 \left[ #3 \right] }}
\newcommand{\@Op}[3]{\ensuremath{ #1 #2 [ #3 ] }}

\newcommand{\ForAll}{\@ifstar\@ForAll\@@ForAll}
\newcommand{\@@ForAll}[2]{\ensuremath{ \@@Op{\forall}{#1}{#2} }}
\newcommand{\@ForAll}[2]{\ensuremath{ \@Op{\forall}{#1}{#2} }}

\newcommand{\Exists}{\@ifstar\@Exists\@@Exists}
\newcommand{\@@Exists}[2]{\ensuremath{ \@@Op{\exists}{#1}{#2} }}
\newcommand{\@Exists}[2]{\ensuremath{ \@Op{\exists}{#1}{#2} }}

% Fancy Line Break
\newcommand{\mbrk}{\vspace{0.5ex}\\\hspace*{\fill}}

